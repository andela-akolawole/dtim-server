<div class="row">
    <div class="col-md-4 col-md-offset-4">
        <nav class="navbar">
            <!-- Brand and toggle get grouped for better mobile display -->

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    <li>
                        <a href="/">Home</a>
                    </li>
                    <li class="active">
                        <a href="/testimony">Testimony</a>
                    </li>
                </ul>
            </div>
            <!-- /.navbar-collapse -->
            <!-- /.container-fluid -->
        </nav>
    </div>
</div>

<div class="row space-top">
    <div class="col-md-6 col-md-offset-3">
        <ul class="nav nav-tabs nav-justified">
            <li class="active"><a href="#approved" data-toggle="tab">Approved</a></li>
            <li><a href="#pending" data-toggle="tab">Pending</a></li>
        </ul>

        <div class="tab-content tab-body clearfix padding">
            <div id="approved" class="tab-pane active">
                {{#each approved}}
                    <div class="testimonyList border-green">
                        Name : {{this.fullName}}
                        <a href="/testimony/{{this._id}}" class="pull-right btn btn-sm btn-success"> View </a>
                    </div>
                {{else}}
                    None approved yet
                {{/each}}
            </div>
            <div id="pending" class="tab-pane">
                {{#each pending}}
                    <div class="testimonyList border-red">
                        Name : {{this.fullName}}
                        <a href="/testimony/{{this._id}}" class="pull-right btn btn-sm btn-success"> View </a>
                    </div>
                {{else}}
                    None pending
                {{/each}}
            </div>
        </div>
    </div>
</div>