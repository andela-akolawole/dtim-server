<div class="row space-top">
    <div class="col-md-6 col-md-offset-3">
        <div class="col-body">
            <div class="row">
                <form action="/ebook/{{book._id}}/update" method="post" enctype="multipart/form-data">
                    <div class="col-md-6">
                        <input class="form-control no-round" placeholder="Book Name" name="bookName" value="{{book.bookName}}" />
                    </div>
                    <div class="col-md-6">
                        <input class="form-control no-round" placeholder="Book Payment Url" name="bookPaymentUrl" value="{{book.bookPaymentUrl}}" />
                    </div>
                    <div class="col-md-6" style="margin-top: 10px;">
                        <input type="text" class="form-control no-round" placeholder="Book Price" name="bookPrice" value="{{book.bookPrice}}"/>
                    </div>
                    <div class="col-md-12 space-top">
                        <textarea class="form-control no-round limit-textarea" name="bookDesc" placeholder="Book Details">{{book.bookDesc}}</textarea>
                    </div>
                    <div class="col-md-6 space-top">
                        <div class="viewImage">
                            <img class="img-responsive" src="{{book.bookCover}}" />
                        </div>
                    </div>
                    <div class="col-md-6 space-top">
                        <label class="btn btn-success no-round" for="postImage">Change Image</label>
                        <input class="hidden" type="file" id="postImage" name="bookCover" />
                    </div>
                    <div class="col-md-12 space-top">
                        <input class="hidden" name="redirect" value="redirect" />
                        <button type="submit" class="btn-success btn no-round">Save</button>
                        <a href="/ebook/{{book._id}}/delete" class="pull-right btn-danger btn no-round">Delete</a>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>