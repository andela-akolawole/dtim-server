<div class="row">
    <div class="col-md-6 col-md-offset-3 col-sm-4">
        <nav class="navbar navbar-inverse">
            <button class="navbar-toggle navbar-toggle-right" type="button" data-toggle="collapse" data-target="#menuBar" aria-controls="navbarSupportedContent"
                aria-expanded="false" aria-label="Toggle navigation">
                <span class="glyphicon glyphicon-th-large"></span>
                </button>
                <!-- Brand and toggle get grouped for better mobile display -->

                <!-- Collect the nav links, forms, and other content for toggling -->
                <div class="collapse navbar-collapse" id="menuBar">
                    <ul class="nav navbar-nav">
                        <li>
                            <a href="/">Home</a>
                        </li>
                        <li>
                            <a href="/testimony">Testimony</a>
                        </li>
                        <li>
                            <a href="/gallery">Gallery</a>
                        </li>
                        <li>
                            <a href="/pastor-post">Pastor's post</a>
                        </li>
                        <li class="active">
                            <a href="/daily-devotion">Daily Devotion</a>
                        </li>
                    </ul>
                </div>
                <!-- /.navbar-collapse -->
                <!-- /.container-fluid -->
        </nav>
    </div>
</div>

<div class="row space-top">
    <div class="col-md-6 col-md-offset-3">
        <div class="row">
            <div class="col-md-12">
                <a href="/daily-devotion/add" class="btn btn-primary pull-right no-round ">Add Devotion</a>
            </div>
        </div>
        <div class="col-body space-top">
            <div class="row">
                <div class="col-md-12">
                    {{#each posts}}
                    <a href="/daily-devotion/{{this._id}}/view">
                        <div class="post-list">
                            <div class="post-title">
                                {{this.title}}
                            </div>
                        </div>
                    </a>
                    {{else}}
                    <div class="post-list">
                        <h3> No post yet</h3>
                    </div>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
</div>